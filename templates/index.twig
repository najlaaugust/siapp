{% extends "base.twig" %}
{% block content %}

<!-- <script language="JavaScript" type="text/javascript" src="../_custom.js"></script> -->

<style type="text/css">
	.Title {font-size: 14px; font-weight: bold; text-align: center;}
	#payment th {font-weight: bold; text-align: left; white-space: nowrap; }
	#payment td {width: 100%;}		
</style>
<form name="myForm" action="/search" method="POST">
<table id="dataentry_content" border="0" cellpadding="0" cellspacing="0" style="padding-left: 10px; width: 100%;">
    <tr>
        <td class="Title">
            <br>{{ current_app_year }} Summer Institute Online Payments</b></br></br>
        </td>
    </tr>
    <tr><td><hr /></td></tr>
	
    <tr><td>Please enter your confirmation number and your last name:<br /><br /></td></tr>
    <tr>
    	<td>
        	<table id="payment" border="0" cellpadding="4" cellspacing="0">
            <tr>
                <th>Confirmation #:</th>
                <td>
                	<input type="text" name="ConfirmNum" maxlength="20" size="50" value="{{ ConfirmNum }}" />
                </td>
            </tr>
            <tr>
                <th>Last Name:</th>
                <td>
                	<input type="text" name="LastName" maxlength="50" size="50" value="{{ LastName }}"/>
                </td>
            </tr>
              
            {% if error %}
            <tr>
                <th></th>
                <td style="color: red; font-style: italic;">
                	* {{ error }}
                 </td>
            </tr>
            {% endif %}            
            
            <tr>
                <th></th>
                <td><input type="submit" value="Submit" style="width: 90px;" /></td>
            </tr>
            </table>
            <p>&nbsp;</p><p>&nbsp;</p><p>&nbsp;</p><p>&nbsp;</p><p>&nbsp;</p>
    	</td>
  	</tr>	
</table>
  
</form>
{% endblock %}
